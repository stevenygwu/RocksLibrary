/* pages/recording/recording.wxss */
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.book-info {
    margin-top: 40rpx;
    height: 200rpx;
    width: 100%;
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
}

.book-image {
    width: 200rpx;
    height: 200rpx;
    margin: 20rpx;
}

.book-stext {
    width: 100%;
    font-size: 32rpx;
    color: #007AFF;
}

.book-summary-input-box {
  position: relative;
  margin: 2px;
  border: 1px solid #D9D9D9;
  background: #FFF;
  min-height: 60px;
}

.ebook-uploader {
    background: #FFF;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
}

.ebook-uploade-text {
    font-size: 32rpx;
    color: #007AFF;
}

.ebook-uploade-container {
    width: 100%;
    height: 400rpx;
    padding: 20rpx 20rpx 20rpx 0;
    display: flex;
    align-content: center;
    justify-content: center;
    box-sizing: border-box;
    border-top: 1px solid rgba(0, 0, 0, .1);
}

.book-img-uploader {
  background: #FFF;
  height: 200rpx;
  width: 100%;
  border-left: none;
  border-right: none;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.uploader-title {
  position: center;
  top: 100rpx;
  width: 100%;
  font-size: 32rpx;
  color: #007AFF;
  display: block;
}

.uploader-image {
    width: 200rpx;
    height: 200rpx;
    margin: 20rpx;
}

.weui-cells {
  position: relative;
  margin-top: 1.17647059em;
  background-color: #FFF;
  line-height: 1.41176471;
  font-size: 17px;
}
.weui-cells_after-title {
  margin-top: 0;
}

.weui-cell {
  border: 1px solid rgba(0, 0, 0, .1);
  background-color: #FFF;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}

.weui-cell_input {
  padding-top: 0;
  padding-bottom: 0;
}

.weui-label {
  width: 105px;
  word-wrap: break-word;
  word-break: break-all;
}

.weui-cell__hd_in-select-after,
.weui-cell__bd_in-select-before {
  padding-left: 15px;
}

.weui-cell__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}

.weui-input {
  height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
}

.page-section-title{
  padding: 0;
}

.body-view {
   border: 1px solid rgba(0, 0, 0, .1);
   background-color: #FFF;
}

.btn-area {
  margin: 1.17647059em 15px 0.3em;
}
